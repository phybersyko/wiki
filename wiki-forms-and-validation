<html>
<script language="javascript" type="text/javascript">
function wonk() {
var x = document.getElementsByTagName("a");
// var nr_li = x.length; //
for (int i = 0; i < x.length; i++) {
  document.write(x[i]);
  }
//* window.onload = getUserName(); *//
}
</script>
<input type="button" onclick="wonk();" value="Show elements?">
</html>
